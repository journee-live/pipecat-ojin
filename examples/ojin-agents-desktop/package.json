{
  "name": "ojin-agents-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Ojin virtual bot avatars",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "setup:python": "pip install -r dev-requirements.txt",
    "setup:all": "npm install && npm run setup:python",
    "test:bot": "python bot.py test-persona test-config",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder --win --mac"
  },
  "keywords": ["electron", "ojin", "avatars", "desktop"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.ojin.agents.desktop",
    "productName": "Ojin Agents Desktop",
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "config.json",
      "bot.py",
      "requirements.txt"
    ],
    "asarUnpack": [
      "bot.py"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}
